<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/light_blue_d7"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.card.MaterialCardView
            style="@style/CustomCardViewStyle"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/light_grey_e1"
            app:strokeColor="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_weight="5"
            android:layout_height="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/imgMenuButton"
                            android:src="@drawable/ic_menu"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardViewGoPremium"
                            android:layout_centerHorizontal="true"
                            android:layout_marginVertical="4dp"
                            app:cardElevation="8dp"
                            app:cardCornerRadius="30dp"
                            app:strokeColor="@android:color/transparent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:orientation="horizontal"
                                android:padding="8dp"
                                android:gravity="center"
                                android:background="@drawable/bg_premium_button"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:src="@drawable/ic_crown"
                                    android:layout_marginEnd="8dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <TextView
                                    android:text="@string/home_activity_go_premium_title"
                                    android:textColor="@color/white"
                                    android:textSize="11sp"
                                    android:fontFamily="@font/stolzl_medium"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>


                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <ImageView
                            android:id="@+id/imgNotificationHome"
                            android:src="@drawable/ic_notification"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/imgVpnOnOffButton"
                        android:src="@drawable/ic_off_button"
                        android:layout_marginTop="32dp"
                        android:layout_marginBottom="8dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/txtVpnOnOffTitle"
                        android:text="@string/home_activity_vpn_off_title"
                        android:textColor="@color/light_grey_ba"
                        android:textStyle="italic"
                        android:textSize="12sp"
                        android:fontFamily="@font/stolzl_regular"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_marginTop="28dp"
                        android:layout_marginHorizontal="8dp"
                        app:strokeColor="@android:color/transparent"
                        app:cardElevation="5dp"
                        app:cardBackgroundColor="@color/light_grey_e1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:padding="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:id="@+id/layoutAutoVpnSelection"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:src="@drawable/ic_auto_icon"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <TextView
                                    android:text="@string/home_activity_auto_title"
                                    android:fontFamily="@font/stolzl_regular"
                                    android:textColor="@color/grey_55"
                                    android:textSize="11sp"
                                    android:layout_marginHorizontal="12dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <ImageView
                                    android:src="@drawable/ic_arrow_blue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/layoutSelectLocation"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:src="@drawable/ic_location"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <TextView
                                    android:text="@string/home_activity_select_location_title"
                                    android:fontFamily="@font/stolzl_regular"
                                    android:textColor="@color/grey_55"
                                    android:textSize="11sp"
                                    android:layout_marginHorizontal="12dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <ImageView
                                    android:src="@drawable/ic_arrow_blue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            </LinearLayout>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

                <com.google.android.material.card.MaterialCardView
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="5dp"
                    app:strokeColor="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:background="@drawable/ic_banner_background"
                        android:paddingVertical="12dp"
                        android:paddingStart="24dp"
                        android:paddingEnd="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_marginEnd="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:text="@string/home_activity_get_premium_title"
                                android:textSize="14sp"
                                android:textColor="@color/white"
                                android:fontFamily="@font/stolzl_bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:text="@string/home_activity_now_title"
                                android:textSize="26sp"
                                android:textColor="@color/white"
                                android:fontFamily="@font/stolzl_bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_marginEnd="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:layout_marginBottom="4dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:src="@drawable/ic_fast_speed"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <TextView
                                    android:text="@string/home_activity_faster_speed_title"
                                    android:textSize="11sp"
                                    android:textColor="@color/white"
                                    android:fontFamily="@font/stolzl_regular"
                                    android:layout_marginStart="8dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:layout_marginBottom="4dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:src="@drawable/ic_worldwide"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <TextView
                                    android:text="@string/home_activity_worldwide_location_title"
                                    android:textSize="11sp"
                                    android:textColor="@color/white"
                                    android:fontFamily="@font/stolzl_regular"
                                    android:layout_marginStart="8dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:layout_marginBottom="4dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:src="@drawable/ic_streaming_servers"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <TextView
                                    android:text="@string/home_activity_streaming_servers_title"
                                    android:textSize="11sp"
                                    android:textColor="@color/white"
                                    android:fontFamily="@font/stolzl_regular"
                                    android:layout_marginStart="8dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:layout_marginBottom="4dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:src="@drawable/ic_no_ads"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <TextView
                                    android:text="@string/home_activity_no_ads_title"
                                    android:textSize="11sp"
                                    android:textColor="@color/white"
                                    android:fontFamily="@font/stolzl_regular"
                                    android:layout_marginStart="8dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <RelativeLayout
                                android:background="@drawable/bg_ads_orange_gradient"
                                android:paddingVertical="4dp"
                                android:paddingHorizontal="8dp"
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:text="@string/home_activity_save_ads_title"
                                    android:textColor="@color/white"
                                    android:textSize="11sp"
                                    android:fontFamily="@font/stolzl_medium"
                                    android:lines="1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            </RelativeLayout>

                            <TextView
                                android:text="@string/home_activity_yearly_plan_title"
                                android:textSize="11sp"
                                android:textColor="@color/white"
                                android:fontFamily="@font/stolzl_regular"
                                android:layout_marginTop="4dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp">

            <LinearLayout
                android:id="@+id/layoutPrivateBrowser"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                tools:ignore="NestedWeights">

                <ImageView
                    android:src="@drawable/ic_private_browser"
                    android:layout_marginBottom="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="@string/home_activity_private_browser_title"
                    android:textColor="@color/grey_55"
                    android:fontFamily="@font/stolzl_regular"
                    android:textSize="11sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutAdvancedFeatures"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/ic_advanced_features"
                    android:layout_marginBottom="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="@string/home_activity_advanced_features_title"
                    android:textColor="@color/grey_55"
                    android:fontFamily="@font/stolzl_regular"
                    android:textSize="11sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <include
        android:id="@+id/layoutSideBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        layout="@layout/layout_sidebar_navigation"/>

</androidx.drawerlayout.widget.DrawerLayout>