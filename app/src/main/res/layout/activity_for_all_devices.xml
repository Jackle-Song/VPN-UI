<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/light_grey_e1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/layoutForAllDevicesHeader"
        layout="@layout/item_header_activity"/>

    <TextView
        android:text="@string/for_all_devices_others_device_title"
        android:textSize="12sp"
        android:textColor="@color/grey_49"
        android:fontFamily="@font/stolzl_medium"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="@string/for_all_devices_others_device_descriptions"
        android:textSize="11sp"
        android:textColor="@color/light_grey_7d"
        android:fontFamily="@font/stolzl_regular"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>