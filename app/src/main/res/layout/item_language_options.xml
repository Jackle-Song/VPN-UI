<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutLanguageOptions"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtLanguageOption"
            android:textSize="11sp"
            android:textColor="@color/grey_49"
            android:fontFamily="@font/stolzl_bold"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/imgSelectedOption"
            android:src="@drawable/ic_selected_icon"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"/>

    </RelativeLayout>

    <View
        android:layout_marginVertical="16dp"
        android:background="@color/light_grey_d1"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</LinearLayout>